<!-- show -->
<!-- Necessary for models that are built but not saved in the controller -->
<% if @task && !@task.id.nil? && current_page?(action: 'show') %>
  <div class="btn-group" role="group">
    <%= link_to 'All Project Tasks', @project, class: "btn btn-default" %>
    <%= link_to 'Edit Task', edit_project_task_path(@project, @task), class: "btn btn-default" %>
    <%= link_to 'Delete Task', [@project, @task], class: "btn btn-default",
      method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Add New Task', new_project_task_path(@project, @task), class: "btn btn-default" %>
  </div>
<% end %>

<!-- new -->
<% if current_page?(action: 'new') %>
  <div class="task-form-links">
    <span><%= link_to 'Back', @project %></span>
  </div>
<% end %>

<!-- edit -->
<% if @task && !@task.id.nil? && current_page?(action: 'edit') %>
  <div class="task-form-links">
    <span><%= link_to 'Back', [@project, @task] %><span class="break"> | </span></span>
    <span><%= link_to 'All Project Tasks', @project %><span class="break"> | </span></span>
    <span><%= link_to 'Delete Task', [@project, @task], method: :delete, data: { confirm: 'Are you sure?' } %></span>
  </div>
<% end %>
